@model LilloLSInmobiliaria.Models.Contrato

@{
    ViewData["Title"] = "Create";
}
@{
    if (TempData["Error"] != null)
    {
        <h1>@TempData["Error"]</h1>
    }

}

<h1>Crear</h1>

<h4>Contrato</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Inmueble.Id" class="control-label"></label>
                <input asp-for="Inmueble.Id" class="form-control" />
                <span asp-validation-for="Inmueble.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InquilinoId" class="control-label"></label>
                <input asp-for="InquilinoId" class="form-control" />
                <span asp-validation-for="InquilinoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FecInicio" class="control-label"></label>
                <input asp-for="FecInicio" class="form-control" />
                <span asp-validation-for="FecInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FecFin" class="control-label"></label>
                <input asp-for="FecFin" class="form-control" />
                <span asp-validation-for="FecFin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Monto" class="control-label"></label>
                <input asp-for="Monto" class="form-control" />
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Garante</label>
                <select class="form-control" name="GaranteId">
                    @foreach (var item in (IList<Garante>)ViewBag.Garantes)
                    {
                        <option value="@item.Id">@(item.Nombre + " " + item.Apellido)</option>
                    }
                </select>
                <span asp-validation-for="GaranteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver al Listado</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
